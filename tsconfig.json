{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "es2019"
    ],
    "sourceMap": false,
    "outDir": "./dist",
    "incremental": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
